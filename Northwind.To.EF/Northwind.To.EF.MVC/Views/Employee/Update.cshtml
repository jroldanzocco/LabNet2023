@model Northwind.To.EF.MVC.Models.EmployeeView

@{
    ViewBag.Title = "Employee page";
}

<h2>Editar empleado</h2>

@using (Html.BeginForm("Update", "Employee", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(e => e.Id)
            <div class="form-group">
                @Html.LabelFor(e => e.FirstName)
                @Html.TextBoxFor(e => e.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.FirstName, null, new { @class = "red" })
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.LastName, new { @class = "form-label" })
                @Html.TextBoxFor(e => e.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.LastName, null, new { @class = "red" })
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.Title, new { @class = "form-label" })
                @Html.TextBoxFor(e => e.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Title, null, new { @class = "red" })
            </div>
             <input type="submit" class="btn btn-success" style="margin-top:5px;" value="Guardar" />
        </div>
    </div>
    
   

}
